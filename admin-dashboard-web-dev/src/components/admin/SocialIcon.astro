---
/**
 * Social Icon Component
 * Uses Lucide icons where available, custom SVGs for others
 */
import { Linkedin, Twitter, Facebook, Instagram } from '@lucide/astro';

interface Props {
  platform: string;
  size?: number;
  class?: string;
}

const { platform, size = 24, class: className = '' } = Astro.props;

// Platform configurations with colors
const platformConfig: Record<string, { name: string; color: string; hasLucide: boolean }> = {
  linkedin: { name: 'LinkedIn', color: '#0A66C2', hasLucide: true },
  x: { name: 'X', color: '#000000', hasLucide: false },
  twitter: { name: 'Twitter', color: '#1DA1F2', hasLucide: true },
  facebook: { name: 'Facebook', color: '#1877F2', hasLucide: true },
  instagram: { name: 'Instagram', color: '#E4405F', hasLucide: true },
  threads: { name: 'Threads', color: '#000000', hasLucide: false },
  tiktok: { name: 'TikTok', color: '#000000', hasLucide: false },
  youtube: { name: 'YouTube', color: '#FF0000', hasLucide: false },
  pinterest: { name: 'Pinterest', color: '#E60023', hasLucide: false },
  reddit: { name: 'Reddit', color: '#FF4500', hasLucide: false },
  bluesky: { name: 'Bluesky', color: '#0085FF', hasLucide: false },
  medium: { name: 'Medium', color: '#000000', hasLucide: false },
};

const config = platformConfig[platform] || { name: platform, color: '#666666', hasLucide: false };
---

{platform === 'linkedin' && (
  <Linkedin size={size} class={className} style={`color: ${config.color}`} />
)}

{platform === 'twitter' && (
  <Twitter size={size} class={className} style={`color: ${config.color}`} />
)}

{platform === 'facebook' && (
  <Facebook size={size} class={className} style={`color: ${config.color}`} />
)}

{platform === 'instagram' && (
  <Instagram size={size} class={className} style={`color: ${config.color}`} />
)}

