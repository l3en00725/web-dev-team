---
import '../Header.astro';
import AdminSidebar from './AdminSidebar.astro';

interface Props {
  title?: string;
  description?: string;
  userId?: string | null;
  email?: string | null;
}

const { 
  title = 'Admin Dashboard | Blue Kids', 
  description = 'Admin dashboard for managing Blue Kids content, forms, and donors.',
  userId = null,
  email = null,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <link rel="icon" type="image/svg+xml" href="/logos/blue-kids-logo-light.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Barlow+Condensed:wght@400;700;900&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={new URL(Astro.url.pathname, Astro.site?.href || 'https://thebluekids.com').href} />
  </head>
  <body class="font-body antialiased bg-brand-light">
    <!-- Admin Header - Scroll-Aware -->
    <header id="admin-header" class="fixed top-0 left-0 right-0 z-50 bg-transparent border-b border-transparent transition-all duration-300 ease-in-out safe-area-top">
      <div class="max-w-full mx-auto px-3 sm:px-4 md:px-6">
        <div class="flex items-center justify-between h-16 gap-2">
          <!-- Logo -->
          <a href="/admin" class="flex items-center cursor-pointer hover:opacity-90 transition-opacity min-h-[44px] min-w-[44px] flex-shrink-0">
            <img src="/logos/blue-kids-logo-light.svg" alt="Blue Kids" class="h-7 sm:h-10 md:h-12 w-auto" />
          </a>
          
          <!-- User Info, Menu, & Sign Out -->
          <div class="flex items-center gap-1 sm:gap-2 md:gap-4 flex-shrink-0">
            {email && (
              <span class="text-xs sm:text-sm text-brand-primary/70 hidden md:inline truncate max-w-[200px]">
                {email}
              </span>
            )}
            
            <!-- Mobile Menu Button (shown on mobile only) -->
            <button
              id="mobile-menu-button-header"
              class="lg:hidden text-brand-primary hover:text-brand-dark p-1.5 sm:p-2 rounded-lg hover:bg-brand-light/50 transition-colors min-h-[44px] min-w-[44px] flex items-center justify-center flex-shrink-0"
              aria-label="Toggle menu"
            >
              <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
            
            <a
              href="/sign-out"
              class="text-xs sm:text-sm text-brand-primary hover:text-brand-dark font-semibold px-2 sm:px-3 py-2 rounded-lg hover:bg-brand-light/50 transition-colors min-h-[44px] flex items-center justify-center whitespace-nowrap flex-shrink-0"
            >
              Sign Out
            </a>
          </div>
        </div>
      </div>
    </header>

    <div class="flex pt-16 min-h-screen">
      <!-- Sidebar -->
      <AdminSidebar />

      <!-- Main Content -->
      <main class="flex-1 ml-0 lg:ml-64 w-full min-w-0">
        <div class="p-4 sm:p-6 md:p-8 max-w-full overflow-x-hidden">
          <slot />
        </div>
      </main>
    </div>
  </body>
</html>

<style is:global>
  html {
    font-family: 'Inter', system-ui, sans-serif;
  }
  
  * {
    box-sizing: border-box;
  }
  
  body {
    margin: 0;
    padding: 0;
    overflow-x: hidden;
  }

  /* Safe area for mobile devices with notches */
  .safe-area-top {
    padding-top: env(safe-area-inset-top);
  }

  /* Ensure touch targets are at least 44x44px on mobile */
  @media (max-width: 768px) {
    a, button, input, select, textarea {
      min-height: 44px;
    }
    
    /* Better text sizing on mobile */
    h1 { font-size: 2rem; }
    h2 { font-size: 1.5rem; }
    h3 { font-size: 1.25rem; }
    
    /* Prevent text overflow */
    * {
      word-wrap: break-word;
      overflow-wrap: break-word;
    }
  }

  /* Touch optimization */
  .touch-manipulation {
    touch-action: manipulation;
    -webkit-tap-highlight-color: transparent;
  }

  /* Safe area support for notched devices */
  .safe-area-inset {
    padding-top: env(safe-area-inset-top, 0);
    padding-bottom: env(safe-area-inset-bottom, 0);
    padding-left: env(safe-area-inset-left, 0);
    padding-right: env(safe-area-inset-right, 0);
  }

  /* Better scrolling on mobile */
  @media (max-width: 768px) {
    body {
      -webkit-overflow-scrolling: touch;
    }
    
    /* Prevent horizontal scroll */
    main {
      overflow-x: hidden;
    }
  }

  /* Scroll-aware navbar states */
  #admin-header.is-scrolled {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    border-bottom-color: rgba(14, 165, 233, 0.1);
  }
</style>

<script>
  function initScrollAwareNavbar() {
    const header = document.getElementById('admin-header');
    if (!header) return;

    let ticking = false;

    function updateNavbar() {
      const scrollY = window.scrollY || window.pageYOffset;
      
      if (scrollY > 20) {
        header.classList.add('is-scrolled');
      } else {
        header.classList.remove('is-scrolled');
      }
      
      ticking = false;
    }

    function onScroll() {
      if (!ticking) {
        window.requestAnimationFrame(updateNavbar);
        ticking = true;
      }
    }

    // Initial check
    updateNavbar();

    // Listen to scroll events
    window.addEventListener('scroll', onScroll, { passive: true });

    // Cleanup on page unload (though Astro handles this)
    return () => {
      window.removeEventListener('scroll', onScroll);
    };
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initScrollAwareNavbar);
  } else {
    initScrollAwareNavbar();
  }
</script>
