              <div class="ml-4 mt-1 space-y-1 border-l-2 border-brand-primary/10 pl-2">
                {item.children.map((child) => (
                <a
                  href={child.href}
                  class={`flex items-center gap-2 px-3 py-2 rounded-lg text-sm font-medium transition-colors min-h-[44px] touch-manipulation ${
