      {navItems.map((item) => {
        const itemActive = isActive(item);
        const hasChildren = item.children && item.children.length > 0;
        
        return (
          <div>
            <a
              href={item.href}
              class={`flex items-center gap-3 px-4 py-3 rounded-xl font-semibold transition-colors min-h-[44px] touch-manipulation ${
                itemActive && !hasChildren
                  ? 'bg-brand-primary text-white'
                  : itemActive && hasChildren
                  ? 'bg-brand-light text-brand-primary'
                  : 'text-brand-primary hover:bg-brand-light active:bg-brand-light'
              }`}
              onclick={!hasChildren ? "document.getElementById('mobile-menu').classList.add('hidden')" : undefined}
            >
              <span class="text-xl">{item.icon}</span>
              <span>{item.label}</span>
            </a>
            
