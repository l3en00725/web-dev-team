</div>

<style>
  /* Prevent body scroll when mobile menu is open */
  body.menu-open {
    overflow: hidden;
    position: fixed;
    width: 100%;
  }

  /* Smooth menu transitions */
  #mobile-menu {
    transition: opacity 0.2s ease-in-out;
  }

  #mobile-menu:not(.hidden) {
    animation: fadeIn 0.2s ease-in-out;
  }

  #mobile-menu > div {
    animation: slideIn 0.3s ease-out;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes slideIn {
    from { transform: translateX(-100%); }
    to { transform: translateX(0); }
  }

  /* Touch optimization */
  .touch-manipulation {
    touch-action: manipulation;
    -webkit-tap-highlight-color: transparent;
  }

  /* Safe area support */
  .safe-area-inset {
    padding-top: env(safe-area-inset-top, 0);
    padding-bottom: env(safe-area-inset-bottom, 0);
    padding-left: env(safe-area-inset-left, 0);
    padding-right: env(safe-area-inset-right, 0);
  }
</style>

<script>
  function initMobileMenu() {
    // Support both header button and legacy FAB button
    const headerButton = document.getElementById('mobile-menu-button-header');
    const fabButton = document.getElementById('mobile-menu-button');
    const menu = document.getElementById('mobile-menu');
    const body = document.body;
    
    const toggleMenu = (e: Event) => {
      e.stopPropagation();
      const isHidden = menu?.classList.contains('hidden');
      
      if (isHidden) {
        menu?.classList.remove('hidden');
        body.classList.add('menu-open');
      } else {
        menu?.classList.add('hidden');
        body.classList.remove('menu-open');
      }
    };
    
    if (menu) {
      // Header button (primary)
      if (headerButton) {
        headerButton.addEventListener('click', toggleMenu);
      }
      
      // FAB button (legacy, kept for compatibility)
      if (fabButton) {
        fabButton.addEventListener('click', toggleMenu);
      }

      // Close menu when clicking overlay
      menu.addEventListener('click', (e) => {
        if (e.target === menu) {
          menu.classList.add('hidden');
          body.classList.remove('menu-open');
        }
      });

      // Close menu on escape key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && !menu.classList.contains('hidden')) {
          menu.classList.add('hidden');
          body.classList.remove('menu-open');
        }
      });
    }
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initMobileMenu);
  } else {
    initMobileMenu();
  }
</script>
