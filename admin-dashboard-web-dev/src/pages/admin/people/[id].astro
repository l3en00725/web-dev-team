---
import AdminLayout from '../../../components/admin/AdminLayout.astro';
import { createClient } from '@supabase/supabase-js';

// Auth handled by Clerk middleware
const { userId } = Astro.locals.auth();
if (!userId) {
  return Astro.redirect('/sign-in', 302);
}
const user = await Astro.locals.currentUser();
const email = user?.primaryEmailAddress?.emailAddress;
const { id } = Astro.params;

const supabase = createClient(
  import.meta.env.SUPABASE_URL,
  import.meta.env.SUPABASE_SERVICE_ROLE_KEY || import.meta.env.SUPABASE_SERVICE_KEY
);

// Fetch person with donor details
const { data: person, error: personError } = await supabase
  .from('people')
  .select('*, donor_details(*)')
  .eq('id', id)
  .single();

if (personError || !person) {
  return Astro.redirect('/admin/people?error=not_found', 302);
}

// Fetch activity timeline
const { data: activities } = await supabase
  .from('activities')
  .select('*')
  .eq('person_id', id)
  .order('created_at', { ascending: false })
  .limit(50);

const donorDetails = person.donor_details?.[0];

// Activity type icons and colors
const activityConfig: Record<string, { icon: string; color: string; bgColor: string }> = {
  donation: { icon: 'üí∞', color: 'text-green-700', bgColor: 'bg-green-100' },
  form_submitted: { icon: 'üìù', color: 'text-blue-700', bgColor: 'bg-blue-100' },
  event_registered: { icon: 'üé´', color: 'text-purple-700', bgColor: 'bg-purple-100' },
  event_attended: { icon: '‚úÖ', color: 'text-green-700', bgColor: 'bg-green-100' },
  email_sent: { icon: 'üìß', color: 'text-gray-700', bgColor: 'bg-gray-100' },
  email_opened: { icon: 'üëÅÔ∏è', color: 'text-blue-700', bgColor: 'bg-blue-100' },
  email_clicked: { icon: 'üîó', color: 'text-purple-700', bgColor: 'bg-purple-100' },
  note_added: { icon: 'üìå', color: 'text-yellow-700', bgColor: 'bg-yellow-100' },
  status_changed: { icon: 'üîÑ', color: 'text-orange-700', bgColor: 'bg-orange-100' },
  tag_added: { icon: 'üè∑Ô∏è', color: 'text-teal-700', bgColor: 'bg-teal-100' },
  tag_removed: { icon: 'üè∑Ô∏è', color: 'text-red-700', bgColor: 'bg-red-100' },
  default: { icon: 'üìã', color: 'text-gray-700', bgColor: 'bg-gray-100' },
};

function getActivityConfig(type: string) {
  return activityConfig[type] || activityConfig.default;
}

function formatDate(dateString: string) {
  const date = new Date(dateString);
  const now = new Date();
  const diffMs = now.getTime() - date.getTime();
  const diffDays = Math.floor(diffMs / (1000 * 60 * 60 * 24));
  
  if (diffDays === 0) {
    return 'Today at ' + date.toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit' });
  } else if (diffDays === 1) {
    return 'Yesterday at ' + date.toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit' });
  } else if (diffDays < 7) {
    return date.toLocaleDateString('en-US', { weekday: 'long' }) + ' at ' + date.toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit' });
  } else {
    return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
  }
}
---

<AdminLayout title={`${person.name} | People | Admin`} userId={userId} email={email}>
  <div class="max-w-6xl mx-auto">
    <!-- Back Link -->
    <a href="/admin/people" class="inline-flex items-center gap-2 text-brand-primary/70 hover:text-brand-primary mb-6 transition-colors">
      <span>‚Üê</span>
      <span>Back to People</span>
    </a>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Left Column: Profile Info -->
      <div class="lg:col-span-1 space-y-6">
        <!-- Profile Card -->
        <div class="bg-white rounded-3xl p-6 shadow-lg border border-brand-primary/10">
          <div class="flex flex-col items-center text-center mb-6">
            <div class="w-20 h-20 rounded-full bg-brand-primary/10 flex items-center justify-center text-brand-primary text-3xl font-bold mb-4">
              {person.name?.charAt(0)?.toUpperCase() || '?'}
            </div>
            <h1 class="text-2xl font-display font-black text-brand-primary mb-1">
              {person.name}
            </h1>
            {person.organization && (
              <p class="text-brand-primary/60">{person.organization}</p>
            )}
          </div>

          <!-- Contact Info -->
          <div class="space-y-3 border-t border-brand-primary/10 pt-4">
            <div class="flex items-center gap-3">
              <span class="text-lg">üìß</span>
              <a href={`mailto:${person.email}`} class="text-brand-accent hover:underline text-sm">
                {person.email}
              </a>
            </div>
            {person.phone && (
              <div class="flex items-center gap-3">
                <span class="text-lg">üì±</span>
                <a href={`tel:${person.phone}`} class="text-brand-primary/80 hover:text-brand-accent text-sm">
                  {person.phone}
                </a>
              </div>
            )}
            {(person.address_line1 || person.city) && (
              <div class="flex items-start gap-3">
                <span class="text-lg">üìç</span>
                <div class="text-brand-primary/80 text-sm">
                  {person.address_line1 && <div>{person.address_line1}</div>}
                  {person.address_line2 && <div>{person.address_line2}</div>}
                  {(person.city || person.state || person.zip) && (
                    <div>
                      {person.city}{person.city && person.state && ', '}{person.state} {person.zip}
                    </div>
                  )}
                </div>
              </div>
            )}
          </div>

          <!-- Tags -->
          <div class="border-t border-brand-primary/10 pt-4 mt-4">
            <div class="text-xs font-semibold text-brand-primary/50 uppercase mb-2">Tags</div>
            <div class="flex flex-wrap gap-2">
              {(person.tags || []).map((tag: string) => (
                <span class="px-3 py-1 bg-brand-light text-brand-primary rounded-full text-sm font-medium">
                  {tag}
                </span>
              ))}
              {(!person.tags || person.tags.length === 0) && (
                <span class="text-brand-primary/40 text-sm">No tags</span>
              )}
            </div>
          </div>

          <!-- Source -->
          <div class="border-t border-brand-primary/10 pt-4 mt-4">
            <div class="text-xs font-semibold text-brand-primary/50 uppercase mb-2">Source</div>
            <div class="text-brand-primary/70 text-sm">
              {person.source ? (
                <span class="capitalize">{person.source.replace('_', ' ')}</span>
              ) : (
                <span class="text-brand-primary/40">Unknown</span>
              )}
              {person.source_detail && (
                <span class="text-brand-primary/50"> ({person.source_detail})</span>
              )}
            </div>
            <div class="text-xs text-brand-primary/50 mt-1">
              Added {new Date(person.created_at).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}
            </div>
          </div>
        </div>

        <!-- Donor Stats Card (if donor) -->
        {donorDetails && (
          <div class="bg-white rounded-3xl p-6 shadow-lg border border-brand-primary/10">
            <div class="flex items-center justify-between mb-4">
              <h2 class="text-lg font-display font-bold text-brand-primary">Donor Stats</h2>
              <span class={`px-3 py-1 rounded-full text-xs font-semibold ${
                donorDetails.status === 'vip' ? 'bg-purple-100 text-purple-700' :
                donorDetails.status === 'recurring' ? 'bg-green-100 text-green-700' :
                donorDetails.status === 'lapsed' ? 'bg-red-100 text-red-700' :
                donorDetails.status === 'one-time' ? 'bg-blue-100 text-blue-700' :
                'bg-gray-100 text-gray-700'
              }`}>
                {donorDetails.status}
              </span>
            </div>
            
            <div class="grid grid-cols-2 gap-4">
              <div class="bg-brand-light/50 rounded-xl p-4 text-center">
                <div class="text-2xl font-display font-black text-brand-primary">
                  ${parseFloat(donorDetails.lifetime_total || 0).toLocaleString('en-US', { minimumFractionDigits: 0 })}
                </div>
                <div class="text-xs text-brand-primary/60">Lifetime</div>
              </div>
              <div class="bg-brand-light/50 rounded-xl p-4 text-center">
                <div class="text-2xl font-display font-black text-brand-accent">
                  ${parseFloat(donorDetails.ytd_total || 0).toLocaleString('en-US', { minimumFractionDigits: 0 })}
                </div>
                <div class="text-xs text-brand-primary/60">YTD</div>
              </div>
              <div class="bg-brand-light/50 rounded-xl p-4 text-center">
                <div class="text-2xl font-display font-black text-brand-primary">
                  {donorDetails.donation_count || 0}
                </div>
                <div class="text-xs text-brand-primary/60">Donations</div>
              </div>
              <div class="bg-brand-light/50 rounded-xl p-4 text-center">
                <div class="text-2xl font-display font-black text-brand-primary">
                  {donorDetails.is_recurring ? '‚úì' : '‚Äî'}
                </div>
                <div class="text-xs text-brand-primary/60">Recurring</div>
              </div>
            </div>

            {donorDetails.first_gift_at && (
              <div class="mt-4 pt-4 border-t border-brand-primary/10 text-sm text-brand-primary/70">
                <div class="flex justify-between">
                  <span>First gift:</span>
                  <span>{new Date(donorDetails.first_gift_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</span>
                </div>
                {donorDetails.last_gift_at && (
                  <div class="flex justify-between mt-1">
                    <span>Last gift:</span>
                    <span>{new Date(donorDetails.last_gift_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</span>
                  </div>
                )}
              </div>
            )}
          </div>
        )}
      </div>

      <!-- Right Column: Activity Timeline -->
      <div class="lg:col-span-2">
        <div class="bg-white rounded-3xl p-6 shadow-lg border border-brand-primary/10">
          <h2 class="text-xl font-display font-bold text-brand-primary mb-6">Activity Timeline</h2>
          
          {activities && activities.length > 0 ? (
            <div class="relative">
              {/* Timeline line */}
              <div class="absolute left-5 top-0 bottom-0 w-0.5 bg-brand-primary/10"></div>
              
              <div class="space-y-6">
                {activities.map((activity, index) => {
                  const config = getActivityConfig(activity.type);
                  return (
                    <div class="relative flex gap-4">
                      {/* Timeline dot */}
                      <div class={`relative z-10 flex-shrink-0 w-10 h-10 rounded-full ${config.bgColor} flex items-center justify-center text-lg`}>
                        {config.icon}
                      </div>
                      
                      {/* Activity content */}
                      <div class="flex-1 pt-1">
                        <div class="flex items-start justify-between gap-4">
                          <div>
                            <p class="text-brand-primary font-medium">
                              {activity.description}
                            </p>
                            {activity.metadata && Object.keys(activity.metadata).length > 0 && (
                              <div class="mt-2 text-sm text-brand-primary/60">
                                {activity.type === 'donation' && activity.metadata.amount && (
                                  <span class="font-semibold text-green-600">
                                    ${parseFloat(activity.metadata.amount).toLocaleString('en-US', { minimumFractionDigits: 2 })}
                                  </span>
                                )}
                                {activity.type === 'event_registered' && activity.metadata.sport && (
                                  <span class="px-2 py-0.5 bg-brand-accent/20 text-brand-accent rounded-full text-xs">
                                    {activity.metadata.sport}
                                  </span>
                                )}
                                {activity.type === 'form_submitted' && activity.metadata.form_type && (
                                  <span class="capitalize">{activity.metadata.form_type} form</span>
                                )}
                              </div>
                            )}
                          </div>
                          <div class="text-xs text-brand-primary/50 whitespace-nowrap">
                            {formatDate(activity.created_at)}
                          </div>
                        </div>
                      </div>
                    </div>
                  );
                })}
              </div>
            </div>
          ) : (
            <div class="text-center py-12 text-brand-primary/50">
              <p class="text-4xl mb-4">üìã</p>
              <p>No activity recorded yet</p>
              <p class="text-sm mt-2">Activities will appear here as this person interacts with your organization.</p>
            </div>
          )}
        </div>
      </div>
    </div>
  </div>
</AdminLayout>
